{
  "compilerOptions": {
    "target": "es2017",
    "alwaysStrict": true,
    "strict": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "module": "CommonJS",
    "outDir": "lib",
    "declaration": true,
    "preserveConstEnums": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}

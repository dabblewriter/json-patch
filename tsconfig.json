{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "target": "es2021",
    "lib": ["es2021"],
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "outDir": "lib"
  },
  "include": ["src/**/*.ts"]
}
